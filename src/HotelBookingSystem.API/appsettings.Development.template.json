{
  "ConnectionStrings": {
    "DefaultConnection": "Host=hotel-booking.db;Port=5432;Database=hotelbooking;Username=your_username;Password=your_password"
  },
  "Redis": {
    "Configuration": "hotel-booking.cache:6379",
    "InstanceName": "HotelBooking_"
  },
  "JwtOptions": {
    "AccessToken": {
      "Key": "<your-access-token-key>",
      "Issuer": "HotelBookingSystem",
      "Audience": "HotelBookingSystemUser",
      "LifetimeMinutes": 15
    },
    "EmailVerification": {
      "Key": "<your-email-verification-key>",
      "Issuer": "HotelBookingSystem",
      "Audience": "HotelBookingSystemUser",
      "LifetimeMinutes": 30
    },
    "PasswordReset": {
      "Key": "<your-password-reset-key>",
      "Issuer": "HotelBookingSystem",
      "Audience": "HotelBookingSystemUser",
      "LifetimeMinutes": 30
    },
    "BookingConfirmation": {
      "Key": "<your-booking-confirmation-key>",
      "Issuer": "HotelBookingSystem",
      "Audience": "HotelBookingSystemUser",
      "LifetimeMinutes": 60
    },
    "RefreshTokenLifeTimeDays": 7
  },
  "SmtpOptions": {
    "Server": "smtp.yourprovider.com",
    "Port": 587,
    "Username": "<your-smtp-username>",
    "Password": "<your-smtp-password>",
    "SenderEmail": "<your-sender-email>",
    "SenderName": "Hotel Booking",
    "FrontendUrl": "http://localhost:5119/api/"
  }
}
