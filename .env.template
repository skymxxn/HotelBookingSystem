# ASP.NET environment
ASPNETCORE_ENVIRONMENT=Development

# Admin seed credentials
DEFAULT_ADMIN_EMAIL=your_admin_email@example.com
DEFAULT_ADMIN_PASSWORD=YourSecureAdminPassword123!

# Connection string to PostgreSQL
DB_CONNECTION=Host=db;Port=5432;Database=HotelDb;Username=postgres;Password=your_postgres_password

# JWT keys (use strong Base64 strings or generate new ones)
JWT_ACCESS_KEY=your_access_token_key_base64
JWT_EMAIL_VERIFICATION_KEY=your_email_verification_key_base64
JWT_PASSWORD_RESET_KEY=your_password_reset_key_base64
JWT_BOOKING_CONFIRMATION_KEY=your_booking_confirmation_key_base64

# SMTP password (for sending email)
SMTP_PASSWORD=your_smtp_app_password

# PostgreSQL container config
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password
